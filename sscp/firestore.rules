rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow admin operations (from your backend/admin app)
    match /students/{document=**} {
      allow read, write: if true;
    }
    
    match /faculty/{document=**} {
      allow read, write: if true;
    }
    
    match /users/{document=**} {
      allow read, write: if true;
    }
    
    // Allow edit access requests
    match /editAccessRequests/{document=**} {
      allow read, write: if true;
    }
    
    // Add academic calendars
    match /academic_calendars/{document=**} {
      allow read, write: if true;
    }
    
    // Course Management Collections
    match /courses/{document=**} {
      allow read, write: if true;
    }
    
    match /courseRequirements/{document=**} {
      allow read, write: if true;
    }
    
    match /settings/{document=**} {
      allow read, write: if true;
    }
    
    match /studentCourses/{document=**} {
      allow read, write: if true;
    }
    
    // Faculty Assignment Collections
    match /facultyAssignments/{document=**} {
      allow read, write: if true;
    }
    
    match /subjects/{document=**} {
      allow read, write: if true;
    }
  }
}
